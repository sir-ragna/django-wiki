{% extends "base.html.j2" %}

{% block content %}
<div class="row">
    <div class="col-md-auto">
        <a href="{% url 'view' name %}"><button type="button" class="btn btn-secondary">Return to post without saving</button></a>
    </div>
    <div class="col"><!-- empty spacer div --></div>
    <div class="col-md-auto">
        <span>Editing content of <q><b>{{ name }}</b></q></span>
    </div>
    <div class="col"><!-- empty spacer div --></div>
</div>
<hr>

<form action="{% url 'edit post' name %}" method="POST"> 
    {% csrf_token %}
    {{ edit_form.title }}
    {{ edit_form.content }}

    <hr>
    <button type="submit" class="btn btn-primary">Save '{{ name }}'</button>
</form>
{% endblock content %}