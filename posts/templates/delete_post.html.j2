{% extends "base.html.j2" %}

{% block content %}

<h1>Please confirm you want to delete <q>{{ name }}</q></h1>
<hr>
<div class="row">
    <div class="col"><!-- spacer --></div>
    <div class="col col-md-auto">
        <a href="{% url 'view' name %}"><button
            class="btn btn-secondary"
            >Cancel</button></a>
    </div>
    <div class="col"><!-- spacer --></div>
    <div class="col col-md-auto">
        <form action="{% url 'delete post' name %}" method="POST">
            {% csrf_token %}
            {{ delete_form.title }}
            <button type="submit" class="btn btn-danger"
                >Delete</button>
        </form>
    </div>
    <div class="col"><!-- spacer --></div>
</div>

{% endblock content %}