{% load static %}<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap through CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link href="{% static 'default.css' %}" rel="stylesheet">
    <title>posts</title>
</head>
<body>
<div class="wrapper">
    <div class="sidebar col-lg-2 col-md-3">
        {# <h2>Search</h2> #}
        <form>
            <input class="searchbar form-control" type="text" name="q" placeholder="Search Through posts">
        </form>
        <br>
        <ul class="nav_links">
            <li><a href="{% url 'mainpage' %}">Mainpage</a></li>
            <li><a href="{% url 'index' %}">Posts overview</a></li>
            <li><a href="{% url 'new post' %}">New post</a></li>
        </ul>
    </div>
    <div class="content col-lg-10 col-md-9">
        <div class="messages m-2">
            {% if messages %}
                {% for message in messages %}
                <div class="alert alert-primary {% if message.tags %}{{ message.tags }}{% endif %}" role="alert">
                    {{ message }}
                </div>
                {% endfor %}
            {% endif %}
        </div>
        {% block content %}
        {% endblock content %}
    </div>
</div>
</body>
</html>